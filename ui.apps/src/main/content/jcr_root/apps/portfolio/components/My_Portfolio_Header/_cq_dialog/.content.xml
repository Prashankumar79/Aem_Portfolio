<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Portfolio Header"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <!-- Branding Tab -->
                    <branding
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Branding"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <logoImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Logo Image"
                                                fieldDescription="Select logo from DAM"
                                                name="./logoImage"
                                                rootPath="/content/dam"
                                                required="{Boolean}true"/>
                                            <subtitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Subtitle (Glowing)"
                                                fieldDescription="Displayed below the logo with glow effect"
                                                name="./subtitle"
                                                emptyText="Full-Stack AEM Developer"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </branding>

                    <!-- Section Links Tab -->
                    <sections
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Section Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <nowSectionId
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Now Section Anchor"
                                                fieldDescription="Anchor ID for Now section (e.g., #now)"
                                                name="./nowSectionId"
                                                emptyText="#now"/>
                                            <writingSectionId
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Writing Section Anchor"
                                                fieldDescription="Anchor ID for Writing section (e.g., #writing)"
                                                name="./writingSectionId"
                                                emptyText="#writing"/>
                                            <contactSectionId
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Contact Section Anchor"
                                                fieldDescription="Anchor ID for Contact/Footer section (e.g., #contact)"
                                                name="./contactSectionId"
                                                emptyText="#contact"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </sections>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
