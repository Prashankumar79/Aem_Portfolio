<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Writing Section"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <!-- General Tab -->
                    <general
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <sectionTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Section Title"
                                                name="./sectionTitle"
                                                emptyText="Writing"/>
                                            <sectionDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldLabel="Section Description"
                                                fieldDescription="Optional intro text for the writing section"
                                                name="./sectionDescription"
                                                rows="{Long}2"
                                                emptyText="I write about technology, development, and more..."/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </general>

                    <!-- Articles Tab -->
                    <articlesTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Articles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <articles
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Articles">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./articles">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Article Title"
                                            name="./title"
                                            required="{Boolean}true"
                                            emptyText="e.g., Understanding AEM Sling Models"/>
                                        <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldLabel="Short Description"
                                            fieldDescription="Brief summary of the article"
                                            name="./description"
                                            rows="{Long}2"
                                            emptyText="A deep dive into Sling Models..."/>
                                        <link
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Article Link"
                                            name="./link"
                                            required="{Boolean}true"
                                            emptyText="https://medium.com/@username/article"/>
                                        <publishDate
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Publish Date"
                                            name="./publishDate"
                                            emptyText="e.g., Dec 2024"/>
                                        <platform
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Platform"
                                            name="./platform">
                                            <items jcr:primaryType="nt:unstructured">
                                                <medium
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Medium"
                                                    value="Medium"
                                                    selected="{Boolean}true"/>
                                                <devto
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Dev.to"
                                                    value="Dev.to"/>
                                                <hashnode
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Hashnode"
                                                    value="Hashnode"/>
                                                <personal
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Personal Blog"
                                                    value="Blog"/>
                                                <other
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Other"
                                                    value="Article"/>
                                            </items>
                                        </platform>
                                    </items>
                                </field>
                            </articles>
                        </items>
                    </articlesTab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
